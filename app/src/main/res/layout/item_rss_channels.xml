<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_homeList_movie"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_item_rss"
>

    <TextView
            android:id="@+id/item_list_rss_name"
            tools:text="NAZWA PORTALU"
            android:fontFamily="@font/impact"
            android:textSize="16sp"
            android:textColor="#FF9800"
            android:shadowColor="#000"
            android:shadowRadius="8"

            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:maxWidth="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            />

    <TextView
            android:text="adres URL"
            android:id="@+id/item_list_rss_address"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowRadius="8"

            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:paddingLeft="8dp"

            app:layout_constraintTop_toBottomOf="@+id/item_list_rss_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            />

</androidx.constraintlayout.widget.ConstraintLayout>