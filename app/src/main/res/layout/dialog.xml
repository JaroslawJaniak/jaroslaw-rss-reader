<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
android:background="#E9E6DB"
>

    <EditText android:layout_width="270dp"
              android:id="@+id/edit_text_dialog1"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.496"
              app:layout_constraintTop_toTopOf="parent"
              android:text="podaj adres URL..."
              android:layout_marginTop="52dp"/>

    <EditText android:layout_width="270dp"
              android:id="@+id/edit_text_dialog2"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.496"
              android:text="określ kategorię..."
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog1"/>
    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonShowCustomDialogbutton2"
            android:textColor="#FFF"
            android:fontFamily="@font/impact"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textAlignment="center"


            android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog2"
            app:layout_constraintVertical_bias="0.027"/>
</androidx.constraintlayout.widget.ConstraintLayout>