<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_homeList_movie"
        android:background="@drawable/bg_round_portal"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
>

    <TextView
            android:id="@+id/item_portal_name"
            tools:text="NAZWA PORTALU"
            android:fontFamily="@font/impact"
            android:textSize="24sp"
            android:textColor="#FF9800"
            android:shadowColor="#000"
            android:shadowRadius="16"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:maxWidth="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.458" android:paddingLeft="8dp"/>

    <TextView
            android:id="@+id/item_portal_category"
            tools:text="kategoria"
            android:fontFamily="@font/impact"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowRadius="8"

            android:lines="2"
            android:layout_height="18dp"
            android:layout_width="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_portal_name"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.461"
            android:layout_marginEnd="8dp" android:paddingLeft="8dp"/>


    <TextView
            android:text="adres URL"
            android:id="@+id/item_portal_address"
            android:fontFamily="@font/impact"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowRadius="8"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_portal_category" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.458"
            android:layout_marginBottom="8dp" android:paddingLeft="8dp"/>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_portal_id"
            android:fontFamily="@font/impact"
            android:textSize="14sp"
            android:textColor="#FFF"

            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>