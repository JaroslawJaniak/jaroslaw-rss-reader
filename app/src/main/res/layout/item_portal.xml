<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_movielist_movie">

    <androidx.cardview.widget.CardView
            android:id="@+id/item_portal_image_cardView"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/item_portal_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_user2"
                android:contentDescription="@null"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/item_portal_name"
            tools:text="NAZWA PORTALU"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="250dp"
            android:lines="2"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_portal_image_cardView" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/item_portal_URL"
            tools:text="ADRES PORTALU"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="250dp"
            android:lines="2"
            android:layout_marginTop="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.466"
            app:layout_constraintStart_toEndOf="@+id/item_portal_image_cardView" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_portal_name" app:layout_constraintHorizontal_bias="0.0"/>







</androidx.constraintlayout.widget.ConstraintLayout>