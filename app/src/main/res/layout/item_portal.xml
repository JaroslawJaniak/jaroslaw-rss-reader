<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_homeList_movie"
        android:background="@drawable/bg_round_portal"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
>

    <androidx.cardview.widget.CardView
            android:id="@+id/item_portal_image_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/item_portal_image"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:contentDescription="@null"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/item_portal_name"
            tools:text="NAZWA PORTALU"

            android:fontFamily="@font/impact"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_portal_image_cardView" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/item_portal_category"
            tools:text="ADRES PORTALU"
            android:fontFamily="@font/impact"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_portal_image_cardView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/item_portal_name"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>